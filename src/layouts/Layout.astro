---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Homemade+Apple&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Esteban&display=swap');

	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-m: clamp(1.2rem, 0.7vw + 1.2rem, 1.2rem);
		--font-size-lg: clamp(1.4rem, 0.7vw + 1.2rem, 1.2rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--color-yellow: #F2B138;
		--color-tan: #D9B88F;
		--color-lt-brown: #D98841;
		--color-dk-brown: #A64826;
		--color-white: #F2F2F2;
		--color-black: #0d0d0d;

		--color-text: var(--color-white);
		--color-bg: var(--color-dk-brown);

		--type-fancy: 'Homemade Apple', cursive;
		--type-heading: 'Esteban', serif;
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	:global(h1) {
		font-size: var(--font-size-xl);
	}

	:global(h2) {
		font-size: var(--font-size-lg);
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
